{
  "name": "todo-api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --config nodemon.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "start:docker": "docker-compose build --no-cache && sudo docker-compose up",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:restart": "docker-compose restart",
    "db:migrate": "docker-compose exec app npx prisma migrate deploy",
    "db:studio": "docker-compose exec app npx prisma studio",
    "db:reset": "docker-compose down -v && docker-compose up -d && sleep 5 && docker-compose exec app npx prisma migrate deploy"
  },
  "author": "Danil Rodionow",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/postgres": "^6.0.2",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@prisma/client": "^6.6.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "fastify": "^5.3.2",
    "fastify-type-provider-zod": "^4.0.2",
    "http-status-codes": "^2.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.2"
  }
}
